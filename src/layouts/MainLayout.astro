---
// src/layouts/MainLayout.astro
const { frontmatter = {} } = Astro.props;
const title = frontmatter.title || 'Astro Page';
const description = frontmatter.description || 'An Astro page';
---
<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body class="min-h-screen flex flex-col"> {/* Ensure footer sticks to bottom */}
  <header class="navbar bg-base-200 shadow-lg sticky top-0 z-50"> {/* Sticky navbar */}
    <div class="container mx-auto flex-1">
      <a href="/" class="btn btn-ghost text-xl normal-case">{title}</a>
    </div>
    {/* Add navbar items here if needed, e.g., theme switcher */}
  </header>

  <main class="flex-grow container mx-auto p-4 md:p-6 lg:p-8">
    <article class="card bg-base-100 shadow-xl">
      <div class="card-body prose lg:prose-xl max-w-none"> {/* Apply prose styles within card-body */}
        <slot /> <!-- Page content will be injected here -->
      </div>
    </article>
  </main>

  <footer class="footer footer-center p-4 bg-base-300 text-base-content">
    <aside>
      <p>&copy; {new Date().getFullYear()} Demo Site - Powered by Astro & DaisyUI</p>
    </aside>
  </footer>
</body>
</html>
